<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultsActivity">
    <fragment android:name="com.tp_amov.ToolbarFragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/toolbar_fragment"/>
    <TextView
            android:text="@string/ganhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWinLose" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/title" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/txtScoreLayout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment"/>

    <LinearLayout
        android:id="@+id/txtScoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_new_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWinLose"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtScorelabel"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pontuacao" />

        <TextView
            android:id="@+id/txtScore"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/_0" />
    </LinearLayout>

    <Button
            android:text="@string/menu_inicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start_page"
            android:tag="btn_start_page"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_new_game"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_new_game"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="32dp"/>
    <Button
            android:text="@string/novo_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new_game"
            android:tag="btn_new_game"
            app:layout_constraintTop_toBottomOf="@+id/txtScoreLayout"
            style="@style/Widget.AppCompat.Button.Colored" android:layout_marginTop="64dp"
            app:layout_constraintStart_toEndOf="@+id/btn_start_page"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>