<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/keyboard_background"
    android:elevation="10dp"
    android:translationZ="5dp"
    android:id="@+id/num_keyboard"
    tools:context=".BoardKeyboardFragment">
    <GridLayout android:layout_gravity="center"
        android:id="@+id/ClicksLayout">
        <Button
            android:id="@+id/num_1"
            android:tag="num_1"
            style="@style/kbrd_btn"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1" />

        <Button
            android:id="@+id/num_2"
            android:tag="num_2"
            style="@style/kbrd_btn"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2" />

        <Button
            android:id="@+id/num_3"
            android:tag="num_3"
            style="@style/kbrd_btn"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3" />

        <Button
            android:id="@+id/num_4"
            android:tag="num_4"
            style="@style/kbrd_btn"
            android:layout_row="0"
            android:layout_column="3"
            android:text="4" />

        <Button
            android:id="@+id/num_5"
            android:tag="num_5"
            style="@style/kbrd_btn"
            android:layout_row="0"
            android:layout_column="4"
            android:text="5" />

        <Button
            android:id="@+id/num_6"
            android:tag="num_6"
            style="@style/kbrd_btn"
            android:layout_row="1"
            android:layout_column="0"
            android:text="6" />


        <Button
            android:id="@+id/num_7"
            android:tag="num_7"
            style="@style/kbrd_btn"
            android:layout_row="1"
            android:layout_column="1"
            android:text="7" />

        <Button
            android:id="@+id/num_8"
            android:tag="num_8"
            style="@style/kbrd_btn"
            android:layout_row="1"
            android:layout_column="2"
            android:text="8" />

        <Button
            android:id="@+id/num_9"
            android:tag="num_9"
            style="@style/kbrd_btn"
            android:layout_row="1"
            android:layout_column="3"
            android:text="9" />

        <Button
            android:id="@+id/btn_hint"
            android:tag="num_10"
            style="@style/hint_btn"
            android:layout_row="1"
            android:layout_column="4"/>

        <Button
            android:id="@+id/btn_backspace"
            android:tag="num_11"
            style="@style/backspace_btn"
            android:layout_row="0"
            android:layout_column="5"/>

        <Button
            android:id="@+id/btn_submit"
            android:tag="num_12"
            style="@style/submit_btn"
            android:layout_row="1"
            android:layout_column="5"/>
    </GridLayout>
</GridLayout>