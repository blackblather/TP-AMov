<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="box">
        <item name="android:enabled">true</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">123456789</item>
        <item name="android:background">@drawable/box_back</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:ems">10</item>
        <item name="android:hint">X</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:onClick">onFocusChange</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="game_bkgnd">

    </style>

</resources>
