<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="box">
        <item name="android:enabled">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">123456789</item>
        <item name="android:textColor">@color/select_foreground_blue</item>
        <item name="android:background">@drawable/box_back</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:ems">10</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:onClick">onFocusChange</item>
        <item name="android:translationZ">3dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
    </style>

    <style name="game_bkgnd">
        <!--<item name="android:layout_width">392dp</item>
        <item name="android:layout_height">392dp</item>-->
        <item name="android:translationZ">1dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/game_background</item>
    </style>

    <style name="kbrd_btn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">20sp</item>
        <item name="android:translationZ">12dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="hint_btn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:translationZ">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:onClick">onHintRequest</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:drawableStart">@drawable/ic_hint_icon</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="backspace_btn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:translationZ">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:onClick">onBackspace</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:drawableStart">@drawable/ic_backspace_icon</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="submit_btn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:translationZ">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:onClick">onSubmitBoard</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:drawableStart">@drawable/ic_submit_icon</item>
        <item name="android:enabled">true</item>
    </style>
</resources>
